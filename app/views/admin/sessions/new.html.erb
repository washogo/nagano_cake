<%=render 'admin/header'%>
<div class="container">
  <div class="row">
    <p class="h5 col-2 bg-secondary m-4 text-center">管理者ログイン</p>
  </div>

  <div class="row">
    <div class="col-11">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="row justify-content-center">
        <%= f.label :email, 'メールアドレス', class:"col-3"%><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col-5",placeholder:"sample@example.com"%>
      </div>

      <div class="row justify-content-center mt-3">
        <%= f.label :password, 'パスワード', class:"col-3"%><br />
        <%= f.password_field :password, autocomplete: "current-password", class:"col-5"%>
      </div>
      
      <div class="mt-3">
        <%= f.submit "ログイン",class:"btn btn-primary col-2 offset-md-5" %>
      </div>
    <% end %>
    </div>
  </div>
</div>

