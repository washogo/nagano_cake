<div class="container">
  <div class="row">
    <p class="h5 col-2 bg-secondary m-4 text-center">管理者ログイン</p>  
  </div>
  <div class="row">
    <div class="col-11">
      <%=form_with model:@admin,local:true do |f|%>
      <div class="row justify-content-center form-group">
        <label class="form-label col-3">メールアドレス</label>
        <%=f.email_field:email,class:"form-controll col-5",autofocus:true,placeholder:"sample@example.com"%>
      </div>
      <div class="row justify-content-center form-group">
        <label class="form-label col-3">パスワード</label>
        <%=f.password_field:encrypted_password,class:"form-controll col-5"%>
      </div>
      <%=f.submit "ログイン",class:"btn btn-primary col-2 offset-md-5"%>
      <%end%>
    </div>
  </div>
</div>

