<%=render 'admin/header_log_in'%>
<div class="container">
  <div class="row">
    <div class="col-2">
     <p class="h5 bg-secondary m-4 text-center">会員一覧</p>
    </div>
  </div>
  <div class="row">
    <table class="table col-10 mx-auto table-bordered-bottom">
      <thead class="thead-light">
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
      <%@customers.each do |customers|%>
        <tr>
          <td><%=customers.id%></td>
          <td><%=link_to "#{customers.last_name}#{customers.first_name}",admin_customer_path(customers.id),class:"border-bottom border-dark text-dark"%></td>
          <td><%=customers.email%></td>
          <td>
          <%if customers.is_active%>
            <p class="text-success">有効</p>
          <%else%>
            <p class="text-black-50">退会</p>
          <%end%>
          </td>
        </tr>
      <%end%>
      </tbody>
    </table>
  </div>
  <div class="row">
    <div class="col-3 mx-auto"><%=paginate @customers%></div>
  </div>
</div>