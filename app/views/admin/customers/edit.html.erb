<%=render 'admin/header_log_in'%>
<div class="container">
  <div class="row">
    <div class="col-4 offset-md-1">
     <p class="h5 bg-secondary m-4 text-center"><%=@customer.last_name%><%=@customer.first_name%>さんの会員情報編集</p> 
    </div>
  </div>
  <div class="row">
    <div class="col-12 mx-auto">
      <div class="row">
        <p class="col-2">会員ID</p>
        <%=@customer.id%>
      </div>
      <%=form_with model:@customer,url:{controller:'customers',action:'update'},local:true do |f|%>
      <div class="form-group">
        <div class="row">
          <label class="col-2">氏名</label>
          <%=f.text_field:last_name,class:"col-2 form-control"%>
          
          <%=f.text_field:first_name,class:"col-2 form-control ml-5"%>
        </div>
        <div class="row mt-2">
          <label class="col-2">フリガナ</label>
          <%=f.text_field:last_name_kana,class:"col-2 form-control"%>
          <%=f.text_field:first_name_kana,class:"col-2 form-control ml-5"%>
        </div>
        <div class="row mt-2">
          <label class="col-2">郵便番号</label>
          <%=f.text_field:postal_code,class:"col-2 form-control"%>
        </div>
        <div class="row mt-2">
          <label class="col-2">住所</label>
          <%=f.text_field:address,class:"col-5 form-control"%>
        </div>
        <div class="row mt-2">
          <label class="col-2">電話番号</label>
          <%=f.text_field:telephone_number,class:"col-2 form-control"%>
        </div>
        <div class="row mt-2">
          <label class="col-2">メールアドレス</label>
          <%=f.text_field:email,class:"col-2 form-control"%>
        </div>
        <div class="row mt-2">
          <label class="col-2">会員ステータス</label>
          <%=f.radio_button:is_active,:true%>有効
          <%=f.radio_button:is_active,:false%>退会
        </div>
        <div class="row">
          <%=f.submit "変更を保存",class:"btn btn-success col-2 offset-md-2"%>
        </div>
      </div>
      <%end%>
    </div>
  </div>
</div>