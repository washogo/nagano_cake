<div class="container">
  <div class="row">
    <div class="col-3 offset-md-1">
     <p class="h5 bg-secondary m-4 text-center">ジャンル一覧・追加</p> 
    </div>
  </div>
  <div class="row">
    <div class="col-10">
      <%=form_with model:@genre,url:{controller:'genres',action:'create'},local:true do |f|%>
      <div class="form-group">
        <label class="form-label col-2">ジャンル名</label>
        <%=f.text_field:name,class:"form-controll col-3 mr-5",placeholder:"ジャンル名"%>
        <%=f.submit "新規登録",class:"btn btn-success col-2"%>
      </div>
      <%end%>
    </div>
  </div>
  <table class="table col-4">
    <thead class="thead-light">
      <tr>
        <th>ジャンル</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <%@genres.each do |genres|%>
      <tr>
        <td><%=genres.name%></td>
        <td><%=link_to '編集する',edit_admin_genre_path(genres.id),class:"btn btn-success"%></td>
      </tr>
      <%end%>
    </tbody>
  </table>
</div>