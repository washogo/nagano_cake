<div class="container">
  <div class="row">
    <div class="col-3 offset-md-1">
     <p class="h5 bg-secondary m-4 text-center">ジャンル編集</p> 
    </div>
  </div>
  <div class="row">
    <div class="col-10">
      <%=form_with model:@genre,url:{controller: 'genres',action: 'update'},local:true do |f|%>
        <div class="form-group">
          <label class="form-controll col-2">ジャンル名</label>
          <%=f.text_field:name,class:"form-controll col-3 mr-5",placeholder:"ジャンル名"%>
          <%=f.submit "変更を保存",class:"btn btn-success col-2"%>
        </div>
      <%end%>
    </div>
  </div>
</div>