<%=render 'admin/header_log_in'%>
<div class="container">
  <div class="row">
    <div class="col-3 offset-md-1">
     <p class="h5 bg-light m-4 text-center">商品詳細</p>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-4">
      <%=attachment_image_tag @item,:image,:fill,300,150, fallback:"no_image.jpeg"%>
    </div>
    <div class="col-8">
      <div class="row">
        <p class="col-3">商品名</p>
        <%=@item.name%>
      </div>
      <div class="row">
        <p class="col-3">商品説明</p>
        <%=@item.introduction%>
      </div>
      <div class="row">
        <p class="col-3">ジャンル</p>
        <%=@item.genre.name%>
      </div>
      <div class="row">
        <p class="col-3">税込価格</br>（税抜価格）</p>
        <%=addTax(@item.price,1.1).to_s(:delimited)%>（<%=@item.price.to_s(:delimited)%>）円
      </div>
      <div class="row">
        <div class="col-3">販売ステータス</div>
        <%if @item.is_active%>
          <p class="text-success">販売中</p>
        <%else%>
          <p class="text-black-50">販売停止中</p>
        <%end%>
      </div>
      <div class="row">
        <%=link_to "編集する",edit_admin_item_path(@item.id),class:"btn btn-success col-2 offset-md-1"%>
      </div>
    </div>
  </div>
</div>