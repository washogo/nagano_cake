<%=render 'admin/header_log_in'%>
<div class="container">
  <div class="row">
    <div class="col-3 offset-md-1">
     <p class="h5 bg-secondary m-4 text-center">新規商品登録</p>
    </div>
  </div>
  <div class="row">
    <div class="col-8 mx-auto">
    <%=form_with model:@item,url:{controller:'items',action:'create'},local:true do |f|%>
      <div class="form-group">
        <div class="row">
          <label class="col-3 form-controll">商品画像</label>
          <%=f.attachment_field:image,class:"col form-controll"%>
        </div>
        <div class="row mt-2">
          <label class="col-3 form-controll">商品名</label>
          <%=f.text_field:name,class:"col-5 form-controll",placeholder:"商品名"%>
        </div>
        <div class="row mt-2">
          <label class="col-3 form-controll">商品説明</label>
          <%=f.text_area:introduction,class:"col-5 form-controll",placeholder:"ここに説明文を記述します",size:"20x8"%>
        </div>
        <div class="row mt-2">
          <label class="col-3 form-controll">ジャンル</label>
          <%=f.collection_select:genre_id,Genre.all,:id,:name,prompt: "--選択してください--",class:"form-controll"%>
        </div>
        <div class="row mt-2">
          <label class="col-3 form-controll">税抜価格</label>
          <%=f.number_field:price,class:"col-5 form-controll",placeholder:"1000"%>円
        </div>
        <div class="row mt-2">
          <label class="col-3 form-controll">販売ステータス</label>
          <%=f.radio_button:is_active,:true,class:"form-controll"%>販売中
          <%=f.radio_button:is_active,:false,class:"form-controll"%>販売停止中
        </div>
        <div class="row">
          <%=f.submit "新規登録",class:"btn btn-success"%>
        </div>
      </div>
    <%end%>
    </div>
  </div>
</div>