<div class="container">
  <div class="row">
    <div class="col-4">
      <p class="h3 m-5 bg-light">注文履歴詳細</p>
    </div>
  </div>
  <div class="row">
    <p class="col-3 font-weight-bold">購入者</p>
    <%=link_to @order.name,admin_customer_path(@order.customer_id)%>
  </div>
  <div class="row">
    <p class="col-3 font-weight-bold">注文日</p>
    <%=@order.updated_at.strftime("%Y/%m/%d")%>
  </div>
  <div class="row">
    <p class="col-3 font-weight-bold">配送先</p>
    <p><%=@order.postal_code%> <%=@order.address%></br>
      <%=@order.name%>
    </p>
  </div>
  <div class="row">
    <p class="col-3 font-weight-bold">支払方法</p>
    <%=@order.payment_method_i18n%>
  </div>
  <div class="row">
    <p class="col-3 font-weight-bold">注文ステータス</p>
    <%=form_with model: @order, url: admin_order_path(@order.id), local:true do |f|%>
      <%= f.select :ordered_status, {'入金待ち': 'payment_waiting','入金確認': 'payment_confirmation','制作中': 'in_production','発送準備中': 'preparing_delivery'}, {selected: 1}%>
      <%= f.submit "更新",class:"btn btn-success"%>
    <%end%>
  </div>
  <div class="row">
    <table class="table table-border">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
          <th>制作ステータス</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          
        </tr>
      </tbody>
    </table>
  </div>
</div>