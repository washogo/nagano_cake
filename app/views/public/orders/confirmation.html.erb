  <div class="container">
    <div class="row">
      <p class="col-3 h3 bg-light">
        注文情報確認
      </p>
    </div>
    <div class="row mt-2">
      <div class="col">
        <table class="table table-bordered">
          <thead class="thead-light">
            <tr>
              <th>商品名</th>
              <th>単価（税込）</th>
              <th>数量</th>
              <th>小計</th>
            </tr>
          </thead>
          <%@cart_items.each do |cart_item|%>
          <tbody>
            <tr>
              <td>
                <%=attachment_image_tag cart_item.item,:image,:fill,50,30,fallback:"no_image.jpeg" %>
                <%=cart_item.item.name%>
              </td>
              <td>
                <%=addTax(cart_item.item.price,1.08).to_s(:delimited)%>
              </td>
              <td>
                <%=cart_item.amount%>
              </td>
              <td>
                <%=subtotal(addTax(cart_item.item.price,1.08),cart_item.amount).to_s(:delimited)%>
              </td>
            </tr>
          </tbody>
          <%end%>
        </table>
      </div>

      <div class="col">
        <table class="table table-bordered">
          <tbody>
            <tr>
              <th class="bg-light">送料</th>
              <td><%=@order.postage%></td>
            </tr>
            <tr>
              <th class="bg-light">商品合計</th>
              <td>
                <%sum=0%>
                <%@cart_items.each do |cart_item|%>
                  <%sum+=subtotal(addTax(cart_item.item.price,1.08),cart_item.amount)%>
                <%end%>
                <%=sum.to_s(:delimited)%>
              </td>
            </tr>
            <tr>
              <th class="bg-light">請求金額</th>
              <td>
                <%sum=0%>
                <%total=0%>
                <%@cart_items.each do |cart_item|%>
                  <%sum+=subtotal(addTax(cart_item.item.price,1.08),cart_item.amount)%>
                  <%total=sum + @order.postage%>
                <%end%>
                <%=total.to_s(:delimited)%>

              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
    <div class="row">
      <p class="font-weight-bold">支払方法</p>
      <p><%=@order.payment_method_i18n%></p>
    </div>
    <div class="row">
      <p class="font-weight-bold">お届け先</p>
      <p><%=@order.address%></br>
        <%=@order.name%></p>
    </div>
    <div class="row">
    <%=form_with model:@order,local:true do |f|%>
      <%=f.hidden_field :name,:value => @order.name%>
      <%=f.hidden_field :address,:value => @order.address%>
      <%=f.hidden_field :postal_code,:value => @order.postal_code%>
      <%=f.hidden_field :postage,:value => @order.postage%>
      <%=f.hidden_field :payment_method,:value =>@order.payment_method%>
      <%=f.hidden_field :billing_amount,:value => sum + @order.postage%>
      <%=f.submit "注文を確定する",class:"btn btn-success col"%>
      <%=f.fields_for :order_items do |i|%>
        <%@cart_items.each do |cart_item|%>
          <%=i.hidden_field :tax_included_price,:value => addTax(cart_item.item.price,1.08)%>
          <%=i.hidden_field :quantity,:value => cart_item.amount%>
        <%end%>
      <%end%>
    <%end%>
    </div>
  </div>
