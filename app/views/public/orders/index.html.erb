<div class="container">
  <div class="row">
    <p class="h3 col-4 m-5">注文履歴一覧</p>
  </div>
  <div class="row">
    <table class="table table-bordered">
      <thead class="thead-light">
        <tr>
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </tr>
      </thead>
      <%@orders.each do |order|%>
      <tbody>
        <td>
          <%=order.updated_at.strftime("%Y/%m/%d")%>
        </td>
        <td>
          <p>〒<%=order.postal_code%></br>
            <%=order.address%></br>
            <%=order.name%></p>
        </td>
        <td>
          <%order.order_items.each do |order_item|%>
            <%=order_item.quantity%>
          <%end%>
        </td>
      </tbody>
      <%end%>
    </table>
  </div>
</div>