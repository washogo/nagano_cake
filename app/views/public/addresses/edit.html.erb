<div class="container">
  <div class="row">
    <div class="col-3 offset-md-1">
     <p class="h5 bg-secondary m-4 text-center">配送先編集</p> 
    </div>
  </div>
  <div class="row">
    <div class="col">
      <%=form_with model:@address,local:true do |f|%>
      <div class="row">
        <label class="col-3">郵便番号（ハイフンなし）</label>
        <%=f.text_field:postal_code,class:"col-2 mb-3"%>
      </div>
      <div class="row">
        <label class="col-3">住所</label>
        <%=f.text_field:address,class:"col-6 mb-3"%>
      </div>
      <div class="row">
        <label class="col-3">宛名</label>
        <%=f.text_field:name,class:"col-2 mb-3"%>
        <%=f.submit "変更内容を保存",class:"btn btn-success offset-md-9"%>
      </div>
      <%end%>
    </div>
  </div>
</div>