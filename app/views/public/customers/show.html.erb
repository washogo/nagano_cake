<div class="container">
  <div class="row">
    <div class="col-3 offset-md-1">
     <p class="h3 bg-secondary m-5 text-center">マイページ</p> 
    </div>
  </div>
  <div class="row">
    <p class="h4 font-weight-bold">登録情報</p>
    <%=link_to "編集する",current_customer_edit_path,class:"btn btn-success col-1 ml-3"%>
  </div>
  <div class="row mt-3">
    <table class="table table-bordered col-8">
      <tbody>
        <tr>
          <th scope="row" class="bg-secondary">氏名</th>
          <td><%=@customer.last_name%><%=@customer.first_name%></td>
        </tr>
        <tr>
          <th scope="row" class="bg-secondary">カナ</th>
          <td><%=@customer.last_name_kana%><%=@customer.first_name_kana%></td>
        </tr>
        <tr>
          <th scope="row" class="bg-secondary">郵便番号</th>
          <td><%=@customer.postal_code%></td>
        </tr>
        <tr>
          <th scope="row" class="bg-secondary">住所</th>
          <td><%=@customer.address%></td>
        </tr>
        <tr>
          <th scope="row" class="bg-secondary">電話番号</th>
          <td><%=@customer.telephone_number%></td>
        </tr>
        <tr>
          <th scope="row" class="bg-secondary">メールアドレス</th>
          <td><%=@customer.email%></td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="row mt-4">
    <p class="h4 font-weight-bold">配送先</p>
    <%=link_to "一覧を見る",addresses_path,class:"btn btn-primary col-2 ml-5"%>
  </div>
  <div class="row mt-3">
    <p class="h4 font-weight-bold">注文履歴</p>
    <%=link_to "一覧を見る",current_customer_edit_path,class:"btn btn-primary col-2 ml-4"%>
  </div>
</div>