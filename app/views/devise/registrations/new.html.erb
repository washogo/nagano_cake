<%=render 'public/header'%>
<div class="container">
  <div class="row">
    <div class="col-3 offset-md-1">
     <p class="h5 bg-secondary m-4 text-center">新規会員登録</p> 
    </div>
  </div>
  
  <%=form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%=render "devise/shared/error_messages", resource: resource %>
  <div class="form-group">
    <div class="row">
      <div class="col-12">
        <div class="row">
          <label class="col-3 form-controll">名前</label>
          <label class="col-1 form-controll">（姓）</label>
          <%=f.text_field :last_name,autofocus: true,placeholder:"令和",class:"form-controll col-2"%>
          <label class="col-1 form-controll">（名）</label>
          <%=f.text_field :first_name,placeholder:"道子",class:"form-controll col-2"%>
        </div>
        <div class="row pt-2">
          <label class="col-3 form-controll">フリガナ</label>
          <label class="col-1 form-controll">（セイ）</label>
          <%=f.text_field :last_name_kana,autofocus: true,placeholder:"レイワ",class:"form-controll col-2"%>
          <label class="col-1 form-controll">（メイ）</label>
          <%=f.text_field :first_name_kana,placeholder:"ミチコ",class:"form-controll col-2"%>
        </div>
        <div class="row pt-2">
          <label class="col-3 form-controll">メールアドレス</label>
          <div class="col-1 form-controll"></div>
          <%= f.email_field :email, autocomplete: "email",placeholder:"sample@example.com",class:"form-controll col-2" %>
        </div>
        <div class="row pt-2">
          <label class="col-3">郵便番号（ハイフンなし）</label>
          <div class="col-1 form-controll"></div>
          <%=f.number_field :postal_code,placeholder:"0000000",class:"form-controll col-2"%>
        </div>
        <div class="row pt-2">
          <label class="col-3 form-controll">住所</label>
          <div class="col-1 form-controll"></div>
          <%=f.text_field :address,placeholder:"東京都渋谷区代々木神園町0-0",class:"form-controll col-5"%>
        </div>
        <div class="row pt-2">
          <label class="col-3 form-controll">電話番号（ハイフンなし）</label>
          <div class="col-1 form-controll"></div>
          <%=f.number_field :telephone_number,placeholder:"00000000000",class:"form-controll"%>
        </div>
        <div class="row pt-2">
          <label class="col-3 form-controll">パスワード（６文字以上）</label>
          <div class="col-1 form-controll"></div>
          <%= f.password_field :password, autocomplete: "new-password",class:"form-controll" %>
        </div>
        <div class="row pt-2">
          <label class="col-3 form-controll">パスワード（確認用）</label>
          <div class="col-1"></div>
          <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-controll"%>
        </div>
      </div>
    </div>
  <div class="row pt-4">
    <div class="col-12 action">
      <%= f.submit "新規登録" ,class:"btn btn-success col-2 offset-md-4 "%>
    </div>
  </div>
  <% end %>
  <div class="row">
    <div class="col-3">
      <p class="h5 bg-secondary m-4 text-center">既に登録済みの方</p> 
    </div>
  </div>
  <div class="row">
    <div class="col-4 offset-md-1">
      <%=link_to "こちら",new_customer_session_path,class:"border-bottom border-primary text-primary"%>からログインしてください。
    </div>
  </div>
</div>